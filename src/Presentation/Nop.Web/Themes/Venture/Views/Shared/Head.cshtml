@using Nop.Core
@using Nop.Core.Domain.Catalog

@inject CatalogSettings catalogSettings
@inject IWorkContext workContext

@{
    var supportRtl = (await workContext.GetWorkingLanguageAsync()).Rtl;

    if (supportRtl)
    {
        NopHtml.AppendCssFileParts("~/Themes/Venture/Content/css/1200.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Venture/Content/css/768.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Venture/Content/css/480.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Venture/Content/css/mobile.rtl.css");
        NopHtml.AppendCssFileParts("~/Themes/Venture/Content/css/styles.rtl.css");
    }
    else
    {
        NopHtml.AppendCssFileParts("~/Themes/Venture/Content/css/1200.css");
        NopHtml.AppendCssFileParts("~/Themes/Venture/Content/css/768.css");
        NopHtml.AppendCssFileParts("~/Themes/Venture/Content/css/480.css");
        NopHtml.AppendCssFileParts("~/Themes/Venture/Content/css/mobile.css");
        NopHtml.AppendCssFileParts("~/Themes/Venture/Content/css/styles.css");
    }

    if (catalogSettings.DisplayAllPicturesOnCatalogPages)
    {
        NopHtml.AppendCssFileParts("~/lib_npm/swiper/swiper-bundle.min.css");
    }

    NopHtml.AppendCssFileParts("~/Plugins/SevenSpikes.Core/Styles/perfect-scrollbar.min.css");

    <script src="~/Plugins/SevenSpikes.Core/Scripts/perfect-scrollbar.min.js" asp-location="Footer"></script>
    <script src="~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.core.min.js" asp-location="Footer"></script>
    <script src="~/Plugins/SevenSpikes.Core/Scripts/sevenspikes.theme.min.js" asp-location="Footer"></script>
    <script src="~/Plugins/SevenSpikes.Core/Scripts/cookiehelper.min.js" asp-location="Footer"></script>

    <script src="~/Themes/Venture/Content/scripts/venture.js" asp-location="Footer"></script>
}