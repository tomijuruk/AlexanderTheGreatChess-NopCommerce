@model SaleOfTheDayOfferAdminModel

@{
    Layout = AdminViewLocations.AdminLayoutViewPath;
}

<form method="post">
    
    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("Admin.Common.Edit") - @Model.Title
            <small>
                <i class="fa fa-arrow-circle-left"></i>
                <a asp-action="List">@T("SevenSpikes.SaleOfTheDay.Admin.Offers.BackToList")</a>
            </small>
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn bg-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
            <button type="submit" name="save-continue" class="btn bg-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.SaveContinue")
            </button>
            <span id="offer-delete" class="btn bg-danger">
                <i class="far fa-trash-alt"></i>
                @T("Admin.Common.Delete")
            </span>
        </div>
    </div>
    @{ await Html.RenderPartialAsync("_CreateOrUpdate", Model); }
</form>
<nop-delete-confirmation asp-model-id="@Model.Id" asp-button-id="offer-delete" />