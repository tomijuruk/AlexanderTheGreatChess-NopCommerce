@model SaleOfTheDaySettingsModel
@{
    Layout = AdminViewLocations.AdminLayoutViewPath;

    NopHtml.SetActiveMenuItemSystemName("SevenSpikes.SaleOfTheDay.Admin.Submenus.Settings");
}

<form method="post">

    <div class="content-header clearfix">
        <h1 class="float-left">
            @T("SevenSpikes.SaleOfTheDay.Admin.Settings.Common") - @T("SevenSpikes.SaleOfTheDay.Admin.Settings.Common.GeneralSettings")
        </h1>
        <div class="float-right">
            <button type="submit" name="save" class="btn bg-primary">
                <i class="far fa-save"></i>
                @T("Admin.Common.Save")
            </button>
        </div>
    </div>

    <section class="content">
        <div class="form-horizontal">
            @await Html.TrialMessageAsync(Model.IsTrialVersion, Plugin.Name, Plugin.UrlInStore)
            @await Component.InvokeAsync("StoreScopeConfiguration")

            <div class="cards-group">
                <div class="card card-default">
                    <div class="card-body">
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-override-store-checkbox asp-for="Enabled_OverrideForStore" asp-input="Enabled" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="Enabled" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="Enabled" />
                                <span asp-validation-for="Enabled"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-override-store-checkbox asp-for="ShowSpecialPriceCountdownTimer_OverrideForStore" asp-input="ShowSpecialPriceCountdownTimer" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="ShowSpecialPriceCountdownTimer" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="ShowSpecialPriceCountdownTimer" />
                                <span asp-validation-for="ShowSpecialPriceCountdownTimer"></span>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3">
                                <nop-override-store-checkbox asp-for="AutoPlay_OverrideForStore" asp-input="AutoPlay" asp-store-scope="@Model.ActiveStoreScopeConfiguration" />
                                <nop-label asp-for="AutoPlay" />
                            </div>
                            <div class="col-md-9">
                                <nop-editor asp-for="AutoPlay" />
                                <span asp-validation-for="AutoPlay"></span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</form>