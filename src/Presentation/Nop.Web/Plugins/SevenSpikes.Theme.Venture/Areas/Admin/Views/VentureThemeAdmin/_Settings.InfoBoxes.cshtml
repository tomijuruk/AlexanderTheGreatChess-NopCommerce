@model VentureThemeSettingsModel

<div class="cards-default">
    <div class="card card-default">
        <div class="card-header">
            <div class="card-title">
                @T("SevenSpikes.Themes.Venture.Admin.PanelTitle.InfoBoxOne")
            </div>
        </div>
