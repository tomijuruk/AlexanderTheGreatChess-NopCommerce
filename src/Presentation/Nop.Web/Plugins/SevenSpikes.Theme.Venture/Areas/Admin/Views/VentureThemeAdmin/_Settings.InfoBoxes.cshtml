                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="EnableInfoBoxOne" />
                </div>
            </div>
            @(await Html.LocalizedEditorAsync<VentureThemeSettingsModel, VentureThemeSettingsLocalizedModel>("venture-localized-info-box-one",
            @<div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="InfoBoxOneTitle_OverrideForStore" asp-input="@Model.Locales[item].InfoBoxOneTitle" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="InfoBoxOneTitle" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="@Model.Locales[item].InfoBoxOneTitle" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="InfoBoxOneText_OverrideForStore" asp-input="@Model.Locales[item].InfoBoxOneText" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="InfoBoxOneText" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="@Model.Locales[item].InfoBoxOneText" />
                    </div>
                </div>
                 <input type="hidden" asp-for="@Model.Locales[item].LanguageId" />
            </div>
    ,
            @<div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="InfoBoxOneTitle_OverrideForStore" asp-input="InfoBoxOneTitle" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="InfoBoxOneTitle" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="InfoBoxOneTitle" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-override-store-checkbox asp-for="InfoBoxOneText_OverrideForStore" asp-input="InfoBoxOneText" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
                        <nop-label asp-for="InfoBoxOneText" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="InfoBoxOneText" />
                    </div>
                </div>
            </div>
            ))
           <div class="form-group row">
                <div class="col-md-3">
                    <nop-override-store-checkbox asp-for="InfoBoxOneUrl_OverrideForStore" asp-input="InfoBoxOneUrl" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
                    <nop-label asp-for="InfoBoxOneUrl" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="InfoBoxOneUrl" />
                </div>
            </div>
            <div class="form-group row">
                <div class="col-md-3">
                    <nop-override-store-checkbox asp-for="InfoBoxOneImageId_OverrideForStore" asp-input="InfoBoxOneImageId" asp-store-scope="Model.ActiveStoreScopeConfiguration" />
                    <nop-label asp-for="InfoBoxOneImageId" />
                </div>
                <div class="col-md-9">
                    <nop-editor asp-for="InfoBoxOneImageId" />
                </div>
            </div>
        </div>
    </div>
</div>

